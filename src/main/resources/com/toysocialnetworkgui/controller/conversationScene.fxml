<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.toysocialnetworkgui.controller.ConversationController">
   <children>
      <VBox prefHeight="304.0" prefWidth="612.0">
         <children>
            <TableView fx:id="tableViewMessages" prefHeight="200.0" prefWidth="618.0">
              <columns>
                <TableColumn fx:id="tableColumnID" prefWidth="75.0" text="ID" visible="false" />
                <TableColumn fx:id="tableColumnSender" prefWidth="136.00000607967377" text="Sender" />
                  <TableColumn fx:id="tableColumnMessage" prefWidth="367.20001220703125" text="Message" />
                  <TableColumn fx:id="tableColumnDate" prefWidth="120.79999389648435" text="Sent on" />
              </columns>
            </TableView>
            <VBox>
               <children>
                  <HBox prefHeight="14.0" prefWidth="626.0">
                     <children>
                        <Button fx:id="buttonPreviousPage" mnemonicParsing="false" onAction="#onPreviousPageButtonClick" prefHeight="26.0" prefWidth="100.0" text="Previous page" />
                        <VBox prefHeight="26.0" prefWidth="449.0" />
                        <Button fx:id="buttonNextPage" mnemonicParsing="false" onAction="#onNextPageButtonClick" prefHeight="26.0" prefWidth="100.0" text="Next page" />
                     </children>
                  </HBox>
                  <TextField fx:id="textFieldMessage" prefHeight="51.0" prefWidth="526.0" promptText="message" />
                  <HBox>
                     <children>
                        <VBox prefHeight="26.0" prefWidth="543.0" />
                        <Button fx:id="buttonSendMessage" mnemonicParsing="false" onAction="#onSendMessageButtonClick" prefHeight="26.0" prefWidth="128.0" text="Send message" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
      <VBox>
         <children>
            <Label text="Conversations" />
            <ListView fx:id="listConversations" prefHeight="285.0" prefWidth="198.0" />
            <Button fx:id="buttonCreateConversation" mnemonicParsing="false" onAction="#onCreateConversationButtonClick" prefHeight="26.0" prefWidth="198.0" text="Create conversation" />
         </children>
      </VBox>
   </children>
</HBox>
